@using HiWorld.Data.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container">
            <a class="navbar-brand navbar-brand-logo" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="navbar-brand-primary">Hi</span><span class="navbar-brand-secondary">World</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse navbar-links">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav flex-grow-1">
                    @if (!this.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item nav-button">
                            <a class="nav-link nav-button-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    }
                    else
                    {
                        <li class="input-group">
                            <div class="input-group-prepend">
                                <button class="btn btn-dark input-group-text" onclick="searchForm.submit()"><i class="fa fa-search"></i></button>
                            </div>
                            <form id="searchForm" asp-controller="Home" asp-action="Search" method="get">
                                <input type="text" class="form-control" name="searchText" placeholder="Search...">
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>