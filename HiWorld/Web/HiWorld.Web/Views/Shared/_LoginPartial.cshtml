@using HiWorld.Common
@using HiWorld.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<ul class="navbar-nav">
    @if (this.SignInManager.IsSignedIn(this.User))
    {
        var user = await UserManager.GetUserAsync(this.User);
        var profileId = user.ProfileId;
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Profiles" asp-action="ById" asp-route-id="@profileId">Hello @(this.User.Identity.Name)!</a>
        </li>
        if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <li class="nav-item nav-button">
                <a class="nav-link nav-button-link" asp-area="Administration" asp-controller="Dashboard" asp-action="Index" title="Admin">Admin</a>
            </li>
        }
        <li class="nav-item nav-button">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
                <button type="submit" class="nav-link btn btn-link nav-button-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item nav-button">
            <a class="nav-link nav-button-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item nav-button">
            <a class="nav-link nav-button-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
