@using HiWorld.Web.ViewModels.Profiles;
@model DisplayProfileViewModel
@{
    this.ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
    this.Layout = "_NoContainersLayout";
}


<div class="d-flex flex-column align-items-center profile-header">
    <div class="d-flex flex-column align-items-center w-100 pt-5 info-block profile-name">
        <section class="img-container">
            @if (Model.ImagePath == null)
            {
                <img src="/img/users/default.png" class="img-thumbnail rounded-circle mx-auto d-block" alt="Profile Picture" />
            }
            else
            {
                <img src="/img/users/@Model.ImagePath" class="img-thumbnail rounded-circle mx-auto d-block" alt="Profile Picture" />
            }
        </section>
        <h1 class="mb-4">@Model.FirstName @Model.LastName</h1>
    </div>
    <section class="container d-flex flex-row justify-content-between pt-3">
        <div class="col-md-6">
            @if (string.IsNullOrWhiteSpace(Model.About))
            {
                <p><b>About: </b>There is no about information for this user.</p>
            }
            else
            {
                <p><b>About: </b>@Model.About</p>
            }
        </div>
        <div class="col-md-3">
            <p><b>Birthday: </b>@Model.BirthDate.ToString("dd/MM/yyyy")</p>
            <p><b>Gender: </b>@Model.Gender</p>
            <p><b>Country: </b>@Model.Country</p>
        </div>
        <div class="col-md-3">
            <p><b>Friends: </b>@Model.FriendsCount</p>
            <p><b>Followers: </b>@Model.FollowersCount</p>
        </div>
    </section>
    <section class="container d-flex flex-row justify-content-around pb-3">
        @if (Model.IsOwner)
        {
            <a class="btn btn-primary" asp-area="" asp-controller="Profiles" asp-action="Edit">Edit Profile</a>
            <a class="btn btn-primary" asp-area="" asp-controller="Posts" asp-action="Create">Create New Post</a>
            <a class="btn btn-primary" asp-area="" asp-controller="Profiles" asp-action="FriendRequests">Friend Requests</a>
            <a class="btn btn-primary" asp-area="Identity" asp-controller="Account" asp-action="Manage">Manage Account</a>
        }
        else
        {
            if (Model.IsPending)
            {
                <a class="btn btn-secondary">Pending Request</a>
                <form asp-action="RemoveFriend" asp-route-id="@Model.Id" method="post">
                    <button class="btn btn-danger">Remove Friend</button>
                </form>
            }
            else if (!Model.IsFriend)
            {
                <form asp-action="AddFriend" asp-route-id="@Model.Id" method="post">
                    <button class="btn btn-success">Add Friend</button>
                </form>
            }
            else
            {
                <a class="btn btn-info">Friends</a>
                <form asp-action="RemoveFriend" asp-route-id="@Model.Id" method="post">
                    <button class="btn btn-danger">Remove Friend</button>
                </form>
            }

            if (!Model.IsFollowing)
            {
                <form asp-action="Follow" asp-route-id="@Model.Id" method="post">
                    <button class="btn btn-primary">Follow</button>
                </form>
            }
            else
            {
                <form asp-action="Follow" asp-route-id="@Model.Id" method="post">
                    <button class="btn btn-secondary">Unfollow</button>
                </form>
            }
        }
    </section>
</div>

<div class="profile-container">
    <div class="mx-auto col-md-6">
        @foreach (var post in Model.Posts)
        {
            <div class="card mt-3">
                @if (Model.IsOwner)
                {
                    <div class="card-header text-right p-1">
                        <form asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id" method="post">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                    <p class="card-text">
                        @post.Text
                        @foreach (var tag in post.PostTags)
                        {
                            <a asp-controller="Tags" asp-action="ById" asp-route-id="@tag.Key">#@tag.Value</a>
                        }
                    </p>
                    <p class="card-text"><small class="text-muted">Created on: @post.CreatedOn.ToString("dd/MM/yyyy HH:mm")</small></p>
                </div>
                @if (post.ImagePath != null)
                {
                    <img src="/img/posts/@post.ImagePath" class="card-img-bottom" alt="Post Image">
                }
                <div class="card-footer">
                    <div class="row mx-0">
                        <form class="likeButton" liked="@(post.IsLiked?"true":"false")" asp-controller="Posts" asp-action="Like" asp-route-id="@post.Id" method="post">
                            @if (!post.IsLiked)
                            {
                                <button class="btn btn-outline-primary">Like <i class="fas fa-heart"></i></button>
                            }
                            else
                            {
                                <button class="btn btn-outline-danger">Unlike <i class="fas fa-heart-broken"></i></button>
                            }
                            <span class="ml-1 card-text">@post.Likes</span>
                        </form>
                        <form class="row ml-auto" asp-controller="Posts" asp-action="AddComment" asp-route-id="@post.Id" method="post">
                            <button class="btn btn-primary mr-1">Comment <i class="fas fa-comments"></i></button>
                            <input type="text" name="comment" placeholder="Comment..." class="form-control w-auto" />
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
        $('.likeButton').submit(function (event) {
            event.preventDefault();
            var antiForgeryToken = $(this).find('input[name=__RequestVerificationToken]').val();
            var form = $(this);
            $.ajax({
                type: 'POST',
                url: $('.likeButton').attr('action'),
                headers: {
                    'X-CSRF-TOKEN': antiForgeryToken
                },
                success: function (data) {
                    if (form.attr('liked') === "false") {
                        form.attr('liked', "true")
                        form.find("button").removeClass('btn-outline-primary').addClass('btn-outline-danger').html('Unlike <i class="fas fa-heart-broken"></i>');
                        form.find("span").text(parseInt(form.find("span").text()) + 1)
                    }
                    else {
                        form.attr('liked', "false")
                        form.find("button").removeClass('btn-outline-danger').addClass('btn-outline-primary').html('Like <i class="fas fa-heart"></i>');
                        form.find("span").text(parseInt(form.find("span").text()) - 1)
                    }
                },
            });
        });
    </script>
}